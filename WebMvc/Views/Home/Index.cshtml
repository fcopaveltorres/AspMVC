@model List<Model.Item>
@{
    ViewBag.Title = "ML Products";
}

<h2>List Products</h2>
<a class="btn btn-default" href="~/home/crud/" title="new"><i class="glyphicon glyphicon-plus"> Product </i></a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ItemId</th>
            <th>Title</th>
            <th>Sold</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
        <tr>
            <td>@i.ItemId</td>
            <td>@i.title</td>
            <td>@i.sold_quantity</td>
            <td>
                <a class="btn btn-default" href="~/home/ver/@i.ItemId" title="View"><i class="glyphicon glyphicon-eye-open"></i></a>
                <a class="btn btn-default" href="~/home/crud/@i.ItemId" title="Edit"><i class="glyphicon glyphicon-pencil"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
